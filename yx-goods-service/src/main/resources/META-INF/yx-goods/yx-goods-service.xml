<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sofa="http://schema.alipay.com/sofa/schema/slite"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://schema.alipay.com/sofa/schema/slite http://schema.alipay.com/sofa/slite.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="sampleService" class="com.yx.goods.service.SampleServiceImpl"/>

    <!-- Publish tr service -->
    <sofa:service interface="com.yx.goods.facade.SampleService" ref="sampleService">
        <sofa:binding.bolt/>
    </sofa:service>
    <sofa:service interface="com.yx.goods.facade.service.GoodsReadService" ref="goodsReadService">
        <sofa:binding.bolt/>
    </sofa:service>
    <sofa:service interface="com.yx.goods.facade.service.GoodsWriteService" ref="goodsWriteService">
        <sofa:binding.bolt/>
    </sofa:service>

</beans>